{
  "name": "gift-circle",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx server/index.ts dev",
    "dev:next": "next dev",
    "build": "npm run prisma:generate:prod && next build",
    "start": "next start",
    "start:custom": "NODE_ENV=production tsx server/index.ts",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prisma:generate": "prisma generate",
    "prisma:generate:dev": "prisma generate --schema prisma/schema.prisma",
    "prisma:generate:prod": "prisma generate --schema prisma/schema.postgres.prisma",
    "prisma:push": "prisma db push",
    "prisma:migrate:prod": "prisma migrate deploy --schema prisma/schema.postgres.prisma",
    "prisma:seed": "tsx prisma/seed.ts",
    "playwright:install": "playwright install --with-deps"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "@radix-ui/react-dialog": "^1.1.4",
    "next": "15.5.5",
    "pdfkit": "^0.17.2",
    "prisma": "^6.17.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "socket.io-client": "^4.7.5",
    "swr": "^2.3.0",
    "uuid": "^11.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.51.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/pdfkit": "^0.17.3",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.19",
    "eslint": "^9",
    "eslint-config-next": "15.5.5",
    "jsdom": "^27.0.1",
    "prettier": "^3.3.3",
    "socket.io": "^4.7.5",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.19.1",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "packageManager": "npm@10.9.0"
}
